# PyShala Environment Variables
# Copy this file to .env and customize as needed

# Reflex API URL (used by frontend to connect to backend)
API_URL=http://localhost:8080

# Judge0 API URL
JUDGE0_URL=http://localhost:2358

# Path to lesson files
LESSONS_PATH=./lessons

# Path to SQLite database for progress tracking
DATABASE_PATH=./data/progress.db

# Code execution limits
MAX_EXECUTION_TIME=10
MAX_MEMORY_KB=128000

# Server port (for Docker deployment)
PORT=8080
